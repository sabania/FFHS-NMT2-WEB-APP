    ViewData["Title"] = "Home Page";
}

<div id="myCarousel"  class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" style="background: #4f3365; opacity:0.85" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" style="height:300px" />
            <div class="carousel-caption" role="option">
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.svg" alt="Visual Studio" class="img-responsive" style="height:300px" />
            <div class="carousel-caption" role="option">
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.svg" alt="Microsoft Azure" class="img-responsive" style="height:300px"/>
            <div class="carousel-caption" role="option">
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="col-container" style="margin-top:30px">
    <form>
        <div class="col" style="width:50%" >
            <div class="form-group">
                <label for="exampleFormControlTextarea1" style="font-size: 20px;line-height: 56px;">Input: English</label>
                <textarea class="form-control" placeholder="Enter your text in english." id="mt-input" rows="10"></textarea>
            </div>
        </div>
        <div class="col" style="vertical-align:middle">
            <i class='fas fa-angle-right' style='font-size:48px;color:red'></i>
        </div>
        <div class="col" style="width:50%">
            <div class="form-group">
                <label for="exampleFormControlTextarea1" style="font-size: 20px;line-height: 56px;">MT output: German</label>
                <div contentEditable="true" id="mt-output" style="color: #999999"></div>
                <ul class="list-inline">
                    <li><i class="fa fa-square changes" style="color:green"></i> corrections</li>
                    <li><i class="fa fa-square changes" style="color:red"></i> new text</li>
                    <li><i class="fa fa-square changes" style="color:orange"></i> order changed</li>
                    <li><i class="fa fa-square changes" style="color:#999999"></i> no changes</li>
                </ul>
                <p><code><small>PRESS <mark id="blink">Ctrl+Space</mark> after making corrections in the output. A new version of the translation will be generated taking into account your corrections.</small></code></p>
            </div>
        </div>
    </form>
</div>
<div class="row">
    <div class="col-md-12" style="width:100%">
        <hr />
    </div>
    <div class="col-md-12">
        <blockquote>
            <p>
                Neural machine translation (NMT) is an approach to machine translation that uses a large artificial neural network to predict the likelihood of a sequence of words, typically modeling entire sentences in a single integrated model.

                Deep neural machine translation is an extension of neural machine translation. Both use a large neural network with the difference that deep neural machine translation processes multiple neural network layers instead of just one.
            </p>
            <footer><a href="https://en.wikipedia.org/wiki/Neural_machine_translation">Wikipedia</a></footer>
        </blockquote>
    </div>
</div>
